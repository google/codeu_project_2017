<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/chat_list_item_vertical_margin"
    android:layout_marginTop="@dimen/chat_list_item_vertical_margin"
    android:paddingLeft="@dimen/chat_list_item_horizontal_padding"
    android:paddingRight="@dimen/chat_list_item_horizontal_padding">

    <com.pkmmte.view.CircularImageView
        android:id="@+id/civUserPic"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:border="true"
        app:border_color="#66ffffff"
        app:border_width="1dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/civUserPic">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="User Name"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>