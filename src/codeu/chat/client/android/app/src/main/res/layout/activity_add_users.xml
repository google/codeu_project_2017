<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ChatMe_Red"
    tools:context=".view.tabs.ChatsFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/addUsersButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="113dp"
        android:background="@color/ChatMe_Blue"
        android:elevation="0dp"
        android:text="Add Users"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ChatMe_Red"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/activityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Add Chat Users"
        android:textSize="18sp"
        android:textStyle="bold" />

    <fragment
        android:id="@+id/fragment"
        android:name="com.google.codeu.chatme.view.basicFragments.UserFragment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        tools:layout="@layout/fragment_user"
        android:layout_below="@+id/navBar"
        android:layout_alignParentStart="true" />

    <fragment
        android:id="@+id/fragment3"
        android:name="com.google.codeu.chatme.view.basicFragments.UserFragment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragment2"
        tools:layout="@layout/fragment_user" />

    <fragment
        android:id="@+id/fragment2"
        android:name="com.google.codeu.chatme.view.basicFragments.UserFragment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        tools:layout="@layout/fragment_user"
        android:layout_below="@+id/fragment"
        android:layout_alignParentStart="true" />

</RelativeLayout>
